<Window x:Class="hw5project1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hw5project1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas Name="bmiCanvas" HorizontalAlignment="Left" Height="401" Margin="10,10,0,0" VerticalAlignment="Top" Width="773">
            <TextBox x:Name="heightBox" Height="23" Canvas.Left="216" TextWrapping="Wrap" Text="" Canvas.Top="118" Width="120"/>
            <TextBox x:Name="weightBox" Height="23" Canvas.Left="510" TextWrapping="Wrap" Text="" Canvas.Top="118" Width="120"/>
            <Label x:Name="heightLabel" Content="Height (inches)" Canvas.Left="109" Canvas.Top="118"/>
            <Label x:Name="weightLabel" Content="Weight (lbs)" Canvas.Left="416" Canvas.Top="114"/>
            <Button x:Name="calculateButton" Click="calculateButton_Click"  Content=" Calculate " Canvas.Left="339" Canvas.Top="215" Width="75"/>
            <Label x:Name="statusLabel" Content="Calculate your BMI" Canvas.Left="324" Canvas.Top="47"/>
        </Canvas>

    </Grid>
</Window>
